{
    "name": "bishopm/bible",
    "description": "Laravel based Bible software",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Bishop",
            "email": "michael@westvillemethodist.co.za",
            "homepage": "http://learningchurch.org"
        }
    ],
    "homepage": "https://gitbible.com/bishopm/bible",
    "keywords": ["Laravel", "Community"],
    "require": {
        "illuminate/support": "~12",
        "livewire/livewire": "~3"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "orchestra/testbench": "~7"
    },
    "autoload": {
        "psr-4": {
            "Bishopm\\Bible\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bishopm\\Bible\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bishopm\\Bible\\Providers\\BibleServiceProvider"
            ],
            "aliases": {
                "Bible": "Bishopm\\Bible\\Facades\\Bible"
            }
        }
    }
}
